.login
  .login-box
    .login-title.text-center
      h1
        small 登录
    .login-content
      .form
        form(action='#', method='post')
          .form-group
            .col-xs-12
              .input-group
                span.input-group-addon
                  span.glyphicon.glyphicon-user
                input#username.form-control(type='text', name='username', placeholder='用户名')
          .form-group
            .col-xs-12
              .input-group
                span.input-group-addon
                  span.glyphicon.glyphicon-lock
                input#password.form-control(type='text', name='password', placeholder='密码')
          .form-group.form-actions
            .col-xs-4.col-xs-offset-4
              button.btn.btn-sm.btn-info(type='submit')
                span.glyphicon.glyphicon-off
                |  登录
          .form-group
            .col-xs-6.link
              p.text-center.remove-margin
                small 忘记密码？
                a(href='javascript:void(0)')
                  small 找回
            .col-xs-6.link
              p.text-center.remove-margin
                small 还没注册?
                a(href='javascript:void(0)')
                  small 注册
